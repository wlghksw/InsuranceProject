<script>
    document.addEventListener('DOMContentLoaded', () => {
        const sections = document.querySelectorAll('.scroll-section');
        const navLinks = document.querySelectorAll('.side-nav a');
        const toTopBtn = document.getElementById('to-top-btn');
        const chatbotUi = document.getElementById('chatbot-ui');

        function updateActiveState() {
            let current = '';
            sections.forEach(section => {
                const sectionTop = section.offsetTop;
                if (window.scrollY >= sectionTop - (window.innerHeight / 2)) current = section.id;
            });

            navLinks.forEach(link => {
                link.classList.toggle('active', link.getAttribute('href').includes(current));
            });

            toTopBtn.classList.toggle('visible', window.scrollY > 300);
            chatbotUi.classList.add('visible');
        }

        let throttleTimer = false;
        window.addEventListener('scroll', () => {
            if (throttleTimer) return;
            throttleTimer = true;
            setTimeout(() => { updateActiveState(); throttleTimer = false; }, 100);
        });
        updateActiveState();
    });
</script>
